{
  "name": "@fluentui/fluent-charts-mcp",
  "version": "1.0.0",
  "description": "MCP server for executing Python Plotly code and capturing Fluent UI chart renderings via Puppeteer",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "fluent-charts-mcp": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc && node dist/index.js",
    "clean": "rimraf dist",
    "postinstall": "echo 'Python packages will be auto-installed on first run'",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "plotly",
    "fluent-ui",
    "chart",
    "visualization",
    "puppeteer",
    "chart-capture",
    "data-visualization",
    "python"
  ],
  "author": "Anush Gupta",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Anush2303/fluentui-charting-contrib.git",
    "directory": "apps/fluent-charts-mcp"
  },
  "bugs": {
    "url": "https://github.com/Anush2303/fluentui-charting-contrib/issues"
  },
  "homepage": "https://github.com/Anush2303/fluentui-charting-contrib/tree/main/apps/fluent-charts-mcp#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.18.0",
    "express": "^4.18.2",
    "puppeteer": "^23.11.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.0.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
